<Window x:Class="QuickJump2022.Forms.InputCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="InputCapture" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="True"
        ShowActivated="True"
        BorderBrush="Transparent"
        BorderThickness="0"
        >
    <!-- Single TextBox for capturing keyboard input -->
    <TextBox 
        x:Name="txtInput" 
        Background="Black"
        Foreground="White"
        BorderThickness="0"
        BorderBrush="Transparent"
        Padding="5,0,0,0"
        VerticalContentAlignment="Center"
        PreviewKeyDown="txtInput_PreviewKeyDown"
        TextChanged="txtInput_TextChanged"
        Focusable="True" 
        FontFamily="{Binding SearchFontFamily}"
        FontSize="{Binding SearchFontSize}"
        />

</Window>
