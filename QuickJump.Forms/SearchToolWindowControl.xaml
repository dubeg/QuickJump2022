<UserControl x:Class="QuickJump2022.Forms.SearchToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:platform="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:imagecatalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Name="searchWindow"
             Loaded="UserControl_Loaded"
             theming:ImageThemingUtilities.ImageBackgroundColor="{DynamicResource {x:Static platform:EnvironmentColors.ToolWindowBackgroundColorKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Box -->
        <Border Grid.Row="0"
                Height="26"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.SearchBoxBackgroundKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.SearchBoxBorderKey}}"
                BorderThickness="1"
                Margin="4,4,4,0">
            <TextBox x:Name="txtSearch"
                     Background="Transparent"
                     Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                     FontFamily="{Binding SearchFontFamily}"
                     FontSize="{Binding SearchFontSize}"
                     BorderThickness="0"
                     VerticalAlignment="Center"
                     Margin="5,0,0,0"
                     PreviewKeyDown="txtSearch_PreviewKeyDown"
                     TextChanged="txtSearch_TextChanged">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Border>
        
        <!-- Items ListBox -->
        <ListBox x:Name="lstItems" 
                 Grid.Row="1"
                 ItemsSource="{Binding Items}"
                 Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
                 BorderThickness="0"
                 Margin="4,4,4,0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.IsDeferredScrollingEnabled="True"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 VirtualizingStackPanel.ScrollUnit="Pixel"
                 VirtualizingStackPanel.CacheLength="20"
                 VirtualizingStackPanel.CacheLengthUnit="Item"
                 PreviewMouseLeftButtonUp="lstItems_PreviewMouseLeftButtonUp">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="Border" 
                                        Background="{Binding BackgroundColor}"
                                        BorderBrush="Transparent"
                                        BorderThickness="0">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" 
                                                Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverOverSelectedKey}}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="{Binding ItemHeight}" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <imaging:CrispImage Grid.Column="0" 
                               Moniker="{Binding IconMoniker}" 
                                UseLayoutRounding="True"
                                RenderOptions.BitmapScalingMode="HighQuality"
                               
                               Width="16" 
                               Height="16" 
                               Margin="5,0,5,0"
                               VerticalAlignment="Center"
                               Visibility="{Binding ShowIcon, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Name and Type -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}" 
                                       FontFamily="{Binding ItemFontFamily}"
                                       FontSize="{Binding ItemFontSize}"
                                       Foreground="{Binding NameForeground}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding TypeSuffix}" 
                                       FontFamily="{Binding ItemFontFamily}"
                                       FontSize="{Binding ItemFontSize}"
                                       Foreground="{Binding TypeForeground}"
                                       Margin="0,0,5,0"/>
                        </StackPanel>
                        
                        <!-- Description -->
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding DescriptionText}" 
                                   FontFamily="{Binding ItemFontFamily}"
                                   FontSize="{Binding ItemFontSize}"
                                   Foreground="{Binding DescriptionForeground}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        
                        <!-- Separator Line -->
                        <Rectangle Grid.ColumnSpan="3" 
                                   Height="1" 
                                   Fill="{Binding SeparatorColor}"
                                   VerticalAlignment="Bottom"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Status Panel -->
        <Grid x:Name="pnlStatus" 
              Grid.Row="2" 
              Height="21"
              Background="{Binding StatusBackgroundColor}"
              Visibility="{Binding ShowStatusBar, Converter={StaticResource BooleanToVisibilityConverter}}"
              Margin="4,0,4,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Results:" 
                       FontFamily="Consolas" 
                       FontSize="12"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                       VerticalAlignment="Center"
                       Margin="5,0,5,0"/>
            
            <TextBlock x:Name="lblCountValue" 
                       Grid.Column="1" 
                       Text="0" 
                       FontFamily="Consolas" 
                       FontSize="12"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            
            <TextBlock x:Name="lblSolutionName" 
                       Grid.Column="2" 
                       FontFamily="Consolas" 
                       FontSize="12"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"
                       TextTrimming="CharacterEllipsis"/>
        </Grid>
    </Grid>
</UserControl>
